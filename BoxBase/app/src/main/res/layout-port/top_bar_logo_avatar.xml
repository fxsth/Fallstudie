<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/top_bar_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/boxbase_logo_to_start_of_parent"
        android:layout_marginLeft="@dimen/boxbase_logo_to_start_of_parent"
        android:layout_marginTop="@dimen/boxbase_logo_to_top_of_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_logo_boxbase_small"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/top_bar_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/avatar_to_top_of_parent"
        android:layout_marginEnd="@dimen/avatar_to_end_of_parent"
        android:layout_marginRight="@dimen/avatar_to_end_of_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_avatar"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>