<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/delivery_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_send_package_delivery_address"
        android:textAppearance="@style/title" />

    <!-- Input fields for Delivery address -->

    <EditText
        android:id="@+id/box_receiver"
        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_box_height"
        android:layout_marginTop="@dimen/input_box_to_upper_title"
        android:background="@drawable/shape_box_text_input"
        android:hapticFeedbackEnabled="false"
        android:hint="@string/hint_receiver"
        android:importantForAutofill="no"
        android:lineSpacingExtra="12sp"
        android:nextFocusDown="@id/box_street"
        android:paddingStart="@dimen/input_box_left_padding"
        android:paddingLeft="@dimen/input_box_left_padding"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textAppearance="@style/text"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorTextHint"
        android:textIsSelectable="false"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/input_box_to_box_small" >

        <EditText
            android:id="@+id/box_street"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_box_height"
            android:layout_weight="0.4"
            android:background="@drawable/shape_box_text_input"
            android:hapticFeedbackEnabled="false"
            android:hint="@string/hint_street"
            android:importantForAutofill="no"
            android:lineSpacingExtra="12sp"
            android:nextFocusDown="@id/box_number"
            android:paddingStart="@dimen/input_box_left_padding"
            android:paddingLeft="@dimen/input_box_left_padding"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textAppearance="@style/text"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTextHint"
            android:textIsSelectable="false"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/box_number"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_box_height"
            android:layout_marginStart="@dimen/input_box_to_box_small"
            android:layout_marginLeft="@dimen/input_box_to_box_small"
            android:layout_weight="1"
            android:background="@drawable/shape_box_text_input"
            android:hapticFeedbackEnabled="false"
            android:hint="@string/hint_house_number"
            android:importantForAutofill="no"
            android:lineSpacingExtra="12sp"
            android:nextFocusDown="@id/box_postcode"
            android:paddingStart="@dimen/input_box_left_padding"
            android:paddingLeft="@dimen/input_box_left_padding"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textAppearance="@style/text"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTextHint"
            android:textIsSelectable="false"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/input_box_to_box_small" >

        <EditText
            android:id="@+id/box_postcode"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_box_height"
            android:layout_weight="1"
            android:background="@drawable/shape_box_text_input"
            android:hapticFeedbackEnabled="false"
            android:hint="@string/hint_postcode"
            android:importantForAutofill="no"
            android:lineSpacingExtra="12sp"
            android:nextFocusDown="@id/box_city"
            android:paddingStart="@dimen/input_box_left_padding"
            android:paddingLeft="@dimen/input_box_left_padding"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textAppearance="@style/text"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTextHint"
            android:textIsSelectable="false"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/box_city"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_box_height"
            android:layout_marginLeft="@dimen/input_box_to_box_small"
            android:layout_weight="0.5"
            android:background="@drawable/shape_box_text_input"
            android:hapticFeedbackEnabled="false"
            android:hint="@string/hint_city"
            android:importantForAutofill="no"
            android:lineSpacingExtra="12sp"
            android:paddingStart="@dimen/input_box_left_padding"
            android:paddingLeft="@dimen/input_box_left_padding"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textAppearance="@style/text"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTextHint"
            android:textIsSelectable="false"
            android:textSize="14sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/box_country"
        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_box_height"
        android:layout_marginTop="@dimen/input_box_to_box_small"
        android:background="@drawable/shape_box_text_input"
        android:hapticFeedbackEnabled="false"
        android:hint="@string/hint_country"
        android:importantForAutofill="no"
        android:lineSpacingExtra="12sp"
        android:paddingLeft="@dimen/input_box_left_padding"
        android:paddingStart="@dimen/input_box_left_padding"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textAppearance="@style/text"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorTextHint"
        android:textIsSelectable="false"
        android:textSize="14sp" />

</LinearLayout>